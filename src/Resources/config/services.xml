<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- CustomFieldService -->

        <service id="EventCandy\Sets\CustomFieldService">
            <argument type="service" id="custom_field_set.repository"/>
        </service>

        <service id="EventCandy\Sets\Core\Content\Product\ProductExtension">
            <tag name="shopware.entity.extension"/>
        </service>

        <service id="EventCandy\Sets\Core\Content\Product\Aggregate\ProductProductDefinition">
            <tag name="shopware.entity.definition" entity="ec_product_product"/>
        </service>

        <service id="EventCandy\Sets\Storefront\Page\Product\Subscriber\ProductListingSubscriber">
            <argument type="service" id="ec_product_product.repository"/>
            <argument type="service" id="Shopware\Core\Checkout\Cart\Price\QuantityPriceCalculator"/>
            <argument type="service" id="Shopware\Core\Content\Product\SalesChannel\Price\ProductPriceDefinitionBuilderInterface"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="EventCandy\Sets\Core\Checkout\Cart\SetProductProcessor">
            <argument type="service" id="logger"/>
<!--&lt;!&ndash;            <argument type="service" id="Shopware\Core\Checkout\Cart\Price\PercentagePriceCalculator"/>&ndash;&gt;-->
<!--&lt;!&ndash;            <argument type="service" id="Shopware\Core\Checkout\Cart\Price\AbsolutePriceCalculator"/>&ndash;&gt;-->
<!--&lt;!&ndash;            <argument type="service" id="Shopware\Core\Checkout\Cart\Price\QuantityPriceCalculator"/>&ndash;&gt;-->
<!--&lt;!&ndash;            <argument type="service" id="media.repository"/>&ndash;&gt;-->
<!--&lt;!&ndash;            <argument type="service" id="product.repository"/>&ndash;&gt;-->
<!--&lt;!&ndash;            <argument type="service" id="Shopware\Core\Content\Product\SalesChannel\Price\ProductPriceDefinitionBuilderInterface"/>&ndash;&gt;-->

            <!-- inject before product processor (5000) -->
            <tag name="shopware.cart.processor" priority="7000"/>
            <tag name="shopware.cart.collector" priority="7000"/>
        </service>


        <!-- Commands  -->
        <service id="EventCandy\Sets\Commands\EcsCommands">
            <argument type="service" id="product.repository"/>
            <tag name="console.command"/>
        </service>

    </services>
</container>
